[Unit]
Description=Alertmanager
Documentation=https://prometheus.io/docs/introduction/overview
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart={{ alertmanager_directory }}/alertmanager \
  --config.file={{ alertmanager_directory }}/alertmanager.yml \
  --storage.tsdb.path={{ alertmanager_directory }}/data 

[Install]
WantedBy=multi-user.target
